{
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "semiColons": false
    }
  },
  "compilerOptions": {
    "lib": ["DOM", "ESNext", "deno.ns"],
    "allowUnreachableCode": true,
    "allowJs": true,
    "noImplicitAny": false
  },
  "tasks": {
    "deploy": "deno run -A deploy.ts",
    "build": "deno run -A build.ts",
    "bundle": "deno run -A bundle.ts",
    "dev_examples": "deno task bundle ./examples/app.ts ./examples/app.js dev"
  }
}
