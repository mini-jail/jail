{
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "semiColons": false
    }
  },
  "compilerOptions": {
    "lib": ["DOM", "ESNext", "deno.ns"],
    "allowUnreachableCode": true,
    "allowJs": true,
    "noImplicitAny": false
  },
  "tasks": {
    "deploy": "deno run -A deploy.ts",
    "build": "deno run -A build.ts --root=./packages/",
    "bundle": "deno run -A bundle.ts",
    "dev_examples": "deno task bundle --src=./examples/app.ts --target=./examples/app.js --dev=true"
  }
}
